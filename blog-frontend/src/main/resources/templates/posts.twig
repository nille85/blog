{% extends "base.twig" %}
{% block content %}

{% for post in posts %}


    <!-- Title -->
    <h1><a href="/posts/{{post.id}}">{{ post.title }}</a></h1>

    <!-- Author -->
    <p class="lead">
        by <a href="#">Start Bootstrap</a>
    </p>

    <hr>

    <!-- Date/Time -->
    <p><span class="glyphicon glyphicon-time"></span> Posted on August 24, 2013 at 9:00 PM</p>

    <hr>

    <!-- Post Content -->
    <p class="lead">
        {{ post.lead }}
    </p>

    <hr>

{% endfor %}


{% endblock %}