<!-- Blog Categories Well -->

<div class="well">
    <h4>Blog Categories</h4>
    <div class="row">
        <div class="col-lg-6">
            <ul class="list-unstyled">
                {% for category in categories %}
                <li><a href="/categories/{{category.id}}">{{ category.description }}</a>
                </li>
               {% endfor %}
            </ul>
        </div>
    </div>
    <!-- /.row -->
</div>
