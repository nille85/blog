{% extends "base.twig" %}
{% block content %}


{% for post in page.posts %}

    <!-- Title -->
    <h1><a href="/posts/{{post.id}}">{{post.content.title}}</a></h1>

    <!-- Author -->
    <p class="lead">
        by <a href="#">{{post.author.name.first}} {{post.author.name.last}}</a>
    </p>

    <hr>

    <!-- Date/Time -->
    <p><span class="glyphicon glyphicon-time"></span> {{post.createdDate}}</p>

    <hr>

    <!-- Post Content -->
    <p class="lead">
       {{post.content.text}}
    </p>

    <hr>


{% endfor %}

        <ul class="pager">
            {% if page.pageInfo.hasPrevious() %}
            <li class="previous"><a href="/page/{{page.pageInfo.pageNumber - 1}}">Previous</a></li>
            {% endif %}
            {% if page.pageInfo.hasNext() %}
            <li class="next"><a href="/page/{{page.pageInfo.pageNumber + 1}">Next</a></li>
            {% endif %}
        </ul>

{% endblock %}