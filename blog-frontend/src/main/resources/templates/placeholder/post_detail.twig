

    <!-- Title -->
    <h1>{{post.content.title}}</h1>

    <!-- Author -->
    <p class="lead">
        by <a href="#">{{post.author.name.first}} {{post.author.name.last}}</a>
    </p>

    <hr>

    <!-- Date/Time -->
    <p><span class="glyphicon glyphicon-time"></span> {{post.createdDate}}</p>

    <hr>

    <!-- Post Content -->
    <p class="lead">
       {{post.content.text}}
    </p>

    <hr>

<!-- Blog Comments -->

<!-- Comments Form -->
<div class="well">
    <h4>Leave a Comment:</h4>
    <form name="commentForm" role="form" method="POST" action="/posts/{{post.id}}">
        <div class="form-group">
            <label for="author">Author</label>
            <input name="author" type="text"  class="form-control" id="author" placeholder="Author">
        </div>
        <div class="form-group">
            <label for="comment">Comment</label>
            <textarea name="comment"  placeholder="Comment" class="form-control" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>



<hr>

<!-- Posted Comments -->
{% for comment in post.comments %}
<!-- Comment -->
<div class="media">
   
    <div class="media-body">
        <h4 class="media-heading">{{comment.author}}
            <small>{{comment.createdDate}}</small>
        </h4>
       {{comment.text}}
    </div>
</div>
{% endfor %}


